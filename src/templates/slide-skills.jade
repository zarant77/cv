mixin stars(count)
    - var n = 0
    while n < 5
        - n++
        if n <= count
            i.fa.fa-star
        else
            i.fa.fa-star-o

mixin years(count)
    if typeof count !== 'number'
        span=count
    else if count < 1000
        if count < 1
            span Less than a year
        else if count === 1
            span 1 year
        else
            span=count + ' years'
    else
        - count = new Date().getFullYear() - count
        if count === 1
            span 1 year
        else
            span=count + ' years'

mixin skillItem(title, item)
    tr
        td=title
        td
            +years(item[0])
        td
            +stars(item[1])

section#skills.block
    h3 Skills

    - each group, groupTitle in skills
        table(cellpadding=0, cellspacing=0)
            tr
                th(width='*') #{groupTitle}
                th(width='300px') Working experience
                th(width='70px') Level

            - each skill, skillTitle in group
                +skillItem(skillTitle, skill)
